// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String @unique
  password String
  role     Role   @default(EMPLOYEE)
  bookings Booking[]
}

enum Role {
  ADMIN
  EMPLOYEE
}

model Room {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  capacity   Int
  facilities String[]
  location   String
  bookings   Booking[]
}

model Booking {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  roomId    String   @db.ObjectId
  startTime DateTime
  endTime   DateTime
  status    Status   @default(PENDING_ADMIN_APPROVAL)
  
  purpose         String   @default("Meeting")
  attendees       Int      @default(1)
  rejectionReason String?
  confirmationTime DateTime?
  
  user      User     @relation(fields: [userId], references: [id])
  room      Room     @relation(fields: [roomId], references: [id])
}

enum Status {
  PENDING_ADMIN_APPROVAL
  PENDING_EMPLOYEE_CONFIRMATION
  CONFIRMED
  REJECTED
  CANCELLED_BY_EMPLOYEE
  // Deprecated but kept for safety if needed, though we will migrate to new ones
  PENDING
  CANCELLED
}
